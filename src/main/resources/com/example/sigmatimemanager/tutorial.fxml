<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="MainPane" prefHeight="790.0" prefWidth="1540.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sigmatimemanager.fxml_controller.Tutorial">
   <children>
      <Button fx:id="buttonPrevious" layoutX="518.0" layoutY="674.0" mnemonicParsing="false" onAction="#handlePreviousButtonAction" prefHeight="54.0" prefWidth="111.0" text="Previous">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <Button fx:id="buttonNext" layoutX="878.0" layoutY="675.0" mnemonicParsing="false" onAction="#handleNextButtonAction" prefHeight="54.0" prefWidth="111.0" text="Next">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <Button fx:id="BackButton" layoutX="80.0" layoutY="80.0" mnemonicParsing="false" onAction="#handleBackButtonAction" prefHeight="54.0" prefWidth="111.0" text="Back">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <Label fx:id="stepLabel" alignment="CENTER" layoutX="640.0" layoutY="679.0" prefHeight="42.0" prefWidth="232.0" text="current step:" textAlignment="CENTER">
